<style>
.a{
      font-size:30px;
}
</style>
<style>
.b{
      font-size:20px;
      font-family:italic;
      margin-top:10px;
}
</style>
<style>
.form-control{
      width:20%;
}
</style>



<div class="a">
<span class="glyphicon glyphicon-wrench" aria-hidden="true"></span>
</div>
<p class="b">Modify</p></br>

<form action="/home/modify/<%=@i.id%>">
<div class="form-group">
    <label for="modify_title">제목</label>
    <input type="string" class="form-control" 
    <% if @i.user_title==""%>
    placeholder="제목 없음"
    <% else %>
    value="<%=@i.user_title%>"
    <% end %>
    name="modify_title">
  </div>
  <div class="form-group">
    <label for="modify_name">닉네임</label>
    <input type="string" class="form-control" 
    <% if @i.user_name==""%>
    placeholder="홍길동"
    <% else %>
    value="<%=@i.user_name%>"
    <% end %>
    name="modify_name">
  </div>
  <label for="modify_content">내용</label>
  <textarea class="form-control" rows="15" 
  <% if @i.user_content=="" %>
  placeholder="내용 입력"
  <% else %>
  value="<%=@i.user_content%>" <% end %>name="modify_content"></textarea>
  </br>
  <div class="form-group">
    <label for="modify_img">파일첨부</label></br>
    <input type="string" class="form-control" name="modify_img" 
    <% if @i.user_img=="" %>
    placeholder="URL 입력"
    <% else %>
    value="<%=@i.user_img%>"<% end %>>
  </div>
  <button type="submit" class="btn btn-default">수정</button>
</form>
